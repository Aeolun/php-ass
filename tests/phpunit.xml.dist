<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./bootstrap.php"
>
    <testsuites>
        <testsuite name="Script">
            <file>./ChaosTangent/ASS/ScriptTest.php</file>
        </testsuite>
        <testsuite name="Block">
            <directory suffix="Test.php">./ChaosTangent/ASS/Block/</directory>
        </testsuite>
        <testsuite name="Line">
            <directory suffix="Test.php">./ChaosTangent/ASS/Line/</directory>
        </testsuite>
        <!--<testsuite name="Reader">
            <file>./ChaosTangent/ASS/ReaderTest.php</file>
        </testsuite>
        <testsuite name="Line">
        </testsuite>-->
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>
</phpunit>
